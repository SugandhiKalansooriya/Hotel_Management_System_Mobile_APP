<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/img1"
    tools:context=".Sign_In">


    <include
        android:id="@+id/include"
        layout="@layout/toolbar2"
        android:background="#A112E3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-4dp" />


    <Button
        android:id="@+id/Sign_in_btn"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/btn_style"
        android:fontFamily="@font/aclonica"
        android:text="Sign In"
        android:textSize="14sp"

        app:backgroundTint="#A112E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="266dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:srcCompat="@drawable/signinimg" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginStart="56dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/customer_input"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="@string/et_email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="#6A047C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginStart="56dp"

        android:layout_marginTop="20dp"
        android:background="@drawable/customer_input"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColor="@color/black"

        android:textColorHint="#6A047C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="294dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="New to Grand Hotel? Sign Up."
        android:textColor="#070101"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sign_in_btn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="222dp"
        android:layout_height="47dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/aclonica"
        android:text="Sign In"
        android:textColor="#A112E3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>